{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["dist"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["./config.ts"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@content/*": ["src/content/*"],
      "@styles/*": ["src/styles/*"],
      "@stores/*": ["src/stores/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
